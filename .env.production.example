# Production Environment Configuration
# Copy this to .env.production and update with your actual values

# Application Configuration
NODE_ENV=production
APP_NAME=SaaS Platform MVP
APP_VERSION=1.0.0
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://admin:your-secure-password@localhost:27017/saas_platform_prod?authSource=admin
MONGODB_OPTIONS=retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-minimum-256-bits-replace-this-with-actual-secret
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_TTL_DEFAULT=3600

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization,X-Requested-With

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-smtp-app-password

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
ENABLE_SWAGGER=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# External Services
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Database Connection Pool
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=30000

# SSL/TLS Configuration
SSL_CERT_PATH=./ssl/certificate.crt
SSL_KEY_PATH=./ssl/private.key
SSL_CA_PATH=./ssl/ca-bundle.crt

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
MEMORY_THRESHOLD_MB=512

# Security Headers
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# API Configuration
API_PREFIX=api
API_VERSION=v1
ENABLE_API_DOCS=false
MAX_REQUEST_SIZE=1mb

# Cache TTL Configuration (in seconds)
CACHE_TTL_USER_PERMISSIONS=900
CACHE_TTL_PLAN_FEATURES=3600
CACHE_TTL_ROLE_DEFINITIONS=7200

# Frontend Configuration (for build)
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_APP_NAME=SaaS Platform MVP
VITE_APP_VERSION=1.0.0
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id

# Docker Configuration
COMPOSE_PROJECT_NAME=saas-platform-mvp
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# MongoDB Configuration
MONGO_USERNAME=admin
MONGO_PASSWORD=your-mongodb-secure-password
MONGO_DATABASE=saas_platform_prod
MONGO_AUTH_SOURCE=admin