{
  "name": "saas-platform-mvp",
  "version": "1.0.0",
  "description": "SaaS Platform MVP - Phase 3 Integration & Finalization",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd saas-app-backend && npm install",
    "install:frontend": "cd saas-app-frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd saas-app-backend && npm run start:dev",
    "dev:frontend": "cd saas-app-frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd saas-app-backend && npm run build",
    "build:frontend": "cd saas-app-frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd saas-app-backend && npm run test",
    "test:frontend": "cd saas-app-frontend && npm run test",
    "test:integration": "cd saas-app-backend && npm run test:integration",
    "test:e2e": "cd saas-app-frontend && npm run e2e",
    "test:user-validation": "npm run test:integration && npm run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd saas-app-backend && npm run lint",
    "lint:frontend": "cd saas-app-frontend && npm run lint",
    "docker:build": "docker-compose -f docker-compose.prod.yml build",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "migrate:prod": "cd saas-app-backend && npm run migrate:prod",
    "backup:db": "./scripts/backup-database.sh",
    "restore:db": "./scripts/restore-database.sh",
    "health:check": "curl -f http://localhost:3000/health && curl -f http://localhost:4200",
    "deploy:staging": "npm run build && npm run docker:build && npm run docker:up",
    "deploy:prod": "npm run test && npm run build && npm run docker:build && npm run migrate:prod && npm run docker:up"
  },
  "workspaces": [
    "saas-app-backend",
    "saas-app-frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:backend",
      "git add"
    ],
    "*.{js,ts,html,css}": [
      "npm run lint:frontend", 
      "git add"
    ]
  },
  "keywords": [
    "saas",
    "mvp",
    "nestjs",
    "angular",
    "role-management",
    "marketing-campaigns",
    "plan-features",
    "french-specification"
  ],
  "author": "EMSI Summer Internship Competition 2025",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/saas-fullstack-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/saas-fullstack-app/issues"
  },
  "homepage": "https://github.com/yourusername/saas-fullstack-app#readme"
}