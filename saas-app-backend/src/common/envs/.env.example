# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/saas_db

# JWT Configuration  
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=90d

# Security Configuration
CORS_ORIGIN=http://localhost:4200

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe Configuration - Replace with your actual keys from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Frontend URL for OAuth2 redirects
FRONTEND_URL=http://localhost:4200

# Application Configuration
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@marketsaas.com

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_SECURITY_LOGGING=true

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=uploads/

# API Keys (for external services)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=